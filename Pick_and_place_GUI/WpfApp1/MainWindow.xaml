<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:cam="clr-namespace:WebcamControl;assembly=WebcamControl"
        mc:Ignorable="d"
        KeyDown="MainWindow_KeyDown"
        Title="MainWindow" Height="621.6" Width="989.4">
    <Grid Margin="0,0,0.2,0.8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="249*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <cam:Webcam x:Name="WebcamViewer" Margin="10,10,25,203.6"

                    FrameRate="30"

                    ImageDirectory="C:\Users\ELL42\Documents\Pick-and-place\Media"

                    VideoDirectory="C:\Users\ELL42\Documents\Pick-and-place\Media"

                    VideoDevice="{Binding SelectedItem, ElementName=VidDevices}"

                    AudioDevice="{Binding SelectedItem, ElementName=AudDevices}"/>


        <Grid HorizontalAlignment="Center" Margin="10,410,227.6,73.8" Width="370">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="VidDevices" 
                      Grid.Row="0"
                      Grid.Column="1"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding VideoDevices}"

                      DisplayMemberPath="Name"

                      SelectedIndex="0" Margin="10,15,0,5" Width="171" />
            <TextBlock Grid.Row="0" Text="Video Device:" HorizontalAlignment="Right" Height="20" Margin="0,20,45,0" RenderTransformOrigin="0.5,0.5"/>

            <Button Grid.Row ="2" Content="Start Capture" 

                    Height="24" Width="112" HorizontalAlignment="Right" Margin="0,0,10,0"

                    Click="StartCaptureButton_Click"/>

            <Button Grid.Row ="1" Grid.Column="1" Content="Stop Capture"

                    Height="24" Width="112" HorizontalAlignment="Left" Margin="10,0,0,0"  

                    Click="StopCaptureButton_Click"/>

        </Grid>
        <Button Name="Exit_but" Content="Exit" HorizontalAlignment="Left" Margin="158,53,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="22"/>
        <Border  BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Center" Margin="87,104,78.8,382.6" Grid.Column="1" RenderTransformOrigin="0.508,0.511" Width="203">
            <Grid Grid.Column="1" Margin="2,2,-2,-1.8">

                <Grid.RowDefinitions >
                    <RowDefinition Height="23*"/>
                    <RowDefinition Height="76*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0.2,-0.2,0.2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <RadioButton GroupName="StepSize" Content="1" HorizontalAlignment="Left" Margin="10,9.8,0,0" Grid.Column="0" VerticalAlignment="Top" Height="15" Width="26" Checked="AllCheckBoxes_CheckedChanged"/>
                    <RadioButton GroupName="StepSize" Content="100" HorizontalAlignment="Left" Margin="10,29.8,0,0" Grid.Column="0" VerticalAlignment="Top" Height="15" Width="39" Checked="AllCheckBoxes_CheckedChanged"/>
                    <RadioButton GroupName="StepSize" Content="2000" HorizontalAlignment="Left" Margin="10,50.8,0,0" Grid.Column="0" VerticalAlignment="Top" Height="15" Width="45" Checked="AllCheckBoxes_CheckedChanged"/>

                    <RadioButton GroupName="StepSize" Content="5" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="10.2,10,0,0" Checked="AllCheckBoxes_CheckedChanged"/>
                    <RadioButton GroupName="StepSize" Content="500" Grid.Column="1" HorizontalAlignment="Left" Margin="10.2,30,0,0" VerticalAlignment="Top" Checked="AllCheckBoxes_CheckedChanged"/>
                    <RadioButton GroupName="StepSize" Content="800" Grid.Column="1" HorizontalAlignment="Left" Margin="10.2,50,0,0" VerticalAlignment="Top" Checked="AllCheckBoxes_CheckedChanged"/>

                    <RadioButton GroupName="StepSize" Content="10" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Margin="10.2,10,0,0" Checked="AllCheckBoxes_CheckedChanged"/>
                    <RadioButton GroupName="StepSize" Content="1000" Grid.Column="2" HorizontalAlignment="Left" Margin="10.2,30,0,0" VerticalAlignment="Top" Checked="AllCheckBoxes_CheckedChanged"/>
                    <RadioButton GroupName="StepSize" Content="1600" Grid.Column="2" HorizontalAlignment="Left" Margin="10.2,50,0,0" VerticalAlignment="Top" Checked="AllCheckBoxes_CheckedChanged"/>

                </Grid>
                <TextBlock Grid.Row="0" x:Name="StepSize" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Step Size"/>
            </Grid>
        </Border>
        <Button Content="Go" Grid.Column="1" HorizontalAlignment="Center"  Width="75" Margin="144.4,316,144.2,247" Click="GoButton"/>
        <Grid Grid.Column="1" HorizontalAlignment="Left" Height="149" Margin="87,395,0,0" VerticalAlignment="Top" Width="162" RenderTransformOrigin="0.501,0.497">
            <Grid.RowDefinitions>
                <RowDefinition Height="28*"/>
                <RowDefinition Height="121*"/>
            </Grid.RowDefinitions>
            <Grid Margin="0,3,0,-0.2" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>

                </Grid.RowDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Content="+X Step"/>
                <Button Grid.Row="0" Grid.Column="1" Content="-X Step"/>
                <Button Grid.Row="1" Grid.Column="0" Content="+Y Step"/>
                <Button Grid.Row="1" Grid.Column="1" Content="-Y Step"/>
                <Button Grid.Row="2" Grid.Column="0" Content="+Z Step"/>
                <Button Grid.Row="2" Grid.Column="1" Content="-Z Step"/>
                <Button Grid.Row="3" Grid.Column="0" Content="+A Step"/>
                <Button Grid.Row="3" Grid.Column="1" Content="-A Step"/>
            </Grid>
            <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">Stepping</TextBlock>
        </Grid>
        <Button Content="Go Home" Grid.Column="1" HorizontalAlignment="Left" Margin="158,252,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>


</Window>
